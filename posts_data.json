<script>
const JSON_URL = 'posts_data.json';
const CONFIG_URL = 'site_config.json';

async function loadSiteConfig(){
  try{
    const r = await fetch(CONFIG_URL);
    if(!r.ok) return;
    const config = await r.json();
    const box = document.getElementById("runningTextContainer");
    const text = document.getElementById("runningText");

    if(config.enable){
      text.innerText = config.runningText || "";
      text.setAttribute("scrollamount", config.speed || 5);
      box.style.display="block";
    }else{
      box.style.display="none";
    }
  }catch(e){
    console.error(e);
  }
}

async function loadRecentPosts(){
  try{
    const r = await fetch(JSON_URL);
    if(!r.ok) return;
    const posts = await r.json();
    const box = document.getElementById("recent-posts-list");

    const data = posts
      .filter(p=>p.category==="tintuc"||p.category==="baiviet")
      .sort((a,b)=>b.id-a.id)
      .slice(0,8);

    if(!data.length){
      box.innerHTML='<p style="text-align:center;color:#777">ChÆ°a cÃ³ dá»¯ liá»‡u</p>';
      return;
    }

    box.innerHTML="";
    data.forEach(p=>{
      box.innerHTML+=`
      <div class="recent-post-item">
        <img src="${p.thumbnail||'images/hoasen.jpg'}">
        <div style="padding:15px">
          <strong style="color:var(--primary)">${p.category==="tintuc"?"TIN Tá»¨C":"BÃ€I VIáº¾T"}</strong>
          <h3><a href="post.html?id=${p.id}" style="text-decoration:none;color:#333">${p.title}</a></h3>
          <small>${p.date||""}</small>
        </div>
      </div>`;
    });
  }catch(e){
    console.error(e);
  }
}

document.addEventListener("DOMContentLoaded",()=>{
  loadSiteConfig();
  loadRecentPosts();
});
</script>

